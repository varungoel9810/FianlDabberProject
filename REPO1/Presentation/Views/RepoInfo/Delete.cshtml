@model Model.Repository

<form method="post" asp-action="Delete">
    
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h3>Are you sure you want to delete this</h3>
            <hr />
        </div>
        <input asp-for="Id" hidden />
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />

            <br />
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" disabled />

            <br />
            <label asp-for="Owner"></label>
            <input asp-for="Owner" class="form-control" disabled/>

            <br />
            <input type="submit" value="Delete" class="btn btn-primary" style="width:150px" />
            <a asp-action="Index" asp-controller="RepoInfo" class="btn btn-primary" style="width:150px;">
                Back to list
            </a>
        </div>

    </div>
</form>

