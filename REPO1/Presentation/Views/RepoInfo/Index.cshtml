@model IEnumerable<Model.Repository>
@{
    ViewData["Title"] = "Index";
}

<partial name="_Notification" />

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Repositroy List</h2>
        </div>
        <div class="col-6 text-end">
            <a  asp-controller="Repoinfo" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp;create new
            </a>
        </div>
    </div>

</div>

<table  class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Owner</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.Description</td>
                <td>@obj.Owner</td>
                
                <td>
                   <div class="w-75 btn-group" role="group">
                    <a asp-action="Edit" asp-controller="RepoInfo" asp-route-id="@obj.Id">
                            <i class="bi bi-pencil-square"></i>Edit 
                    </a>
                    <span><pre>  </pre></span>
                     <a asp-action="Delete" asp-controller="RepoInfo" asp-route-id="@obj.Id">
                            <i class="bi bi-trash"></i>Delete
                     </a>
                     <span><pre>  </pre></span>
                     <a asp-action="Details" asp-controller="RepoInfo" asp-route-id="@obj.Id">
                            <i class="bi bi-info-circle"></i>Details
                     </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>

</table>